{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "src/*": ["*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "typeRoots": ["node_modules/@types", "./types"],
    "types": ["node", "body-parser", "express", "http-errors", "graceful-fs", "http-proxy", "range-parser", "resolve", "send", "serve-index", "serve-static", "trusted-types"]
  },
  "exclude": ["node_modules", "build"],
  "include": ["src/**/*"]
}